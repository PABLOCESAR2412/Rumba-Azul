---

<section class="dark:bg-[#080808] bg-[linear-gradient(to_right,#ebecec_1px,transparent_1px),linear-gradient(to_bottom,#ebecec_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] font-suse">
    <div class="flex flex-col py-20 px-5 sm:px-10 md:px-12 lg:px-20 xl:px-28 2xl:px-80">
        <div>
            <p class="dark:text-white text-center font-semibold text-2xl lg:text-3xl">Integrantes</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-y-16 py-14">
            {images.map((src) => (
                <div class="flex flex-row items-center">
                    <img src={src} class="rounded-2xl bg-slate-300 p-4 w-20 md:w-28 lg:w-32 h-20 md:h-28 lg:h-32 items-center"/>
                    <div class="flex flex-col px-3 md:px-7 ">
                        <div class="text-azul-500 dark:text-white font-extrabold text-lg lg:text-xl">
                            Nombre
                        </div>
                        <div class="dark:text-white lg:text-lg">
                            Puesto
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>